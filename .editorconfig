# EditorConfig — универсальная конфигурация для единообразия кода
# https://editorconfig.org

root = true

# Общие настройки для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown файлы
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML файлы
[*.{yml,yaml}]
indent_size = 2

# JSON файлы
[*.json]
indent_size = 2

# Python файлы
[*.py]
indent_size = 4
max_line_length = 120

# JavaScript/TypeScript файлы
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Shell скрипты
[*.{sh,bash}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Dockerfile
[Dockerfile*]
indent_size = 2

# Git конфигурация
[.gitignore]
indent_size = 2

# CI/CD файлы
[.github/**/*.yml]
indent_size = 2
